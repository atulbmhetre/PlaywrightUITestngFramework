<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Open Cart Cross Browser Test PW Suite" parallel="tests" thread-count="2" verbose="4" >

    <listeners>
        <listener class-name="com.qa.opencart.utilities.AnnotationTransformer" />
        <listener class-name="com.qa.opencart.listeners.ExtentReportListeners"></listener>
    </listeners>

    <!-- A test block can contain one or more classes -->
    <test name="Open Cart Chromium Tests">
        <parameter name="browser" value="chromium"/>
        <classes>
            <!-- Specify the full package and class name of your test class -->
            <class name="com.qa.opencart.tests.HomepageTests" />
            <class name="com.qa.opencart.tests.LoginpageTests" />
        </classes>
    </test>
    <test name="Open Cart Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <!-- Specify the full package and class name of your test class -->
            <class name="com.qa.opencart.tests.HomepageTests" />
            <class name="com.qa.opencart.tests.LoginpageTests" />
        </classes>
    </test>

</suite>
